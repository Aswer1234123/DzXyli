#include <iostream>

using namespace std;

int main() {
    int number; 
    cout << "Введите целое число: ";
    cin >> number; 

    if (number % 2 == 0) {
        cout << "Число " << number << " является четным." << endl;
    } else {
        cout << "Число " << number << " является нечетным." << endl;
    }

    return 0;
}
